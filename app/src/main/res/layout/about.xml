<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AboutActivity">


    <ImageView
            android:layout_width="332dp"
            android:src="@drawable/andani"
            android:layout_height="188dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView" android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="38dp" android:layout_marginStart="38dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="51dp" android:layout_marginRight="51dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="andani rizwan efendi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nama" android:textSize="18sp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="116dp"
            android:layout_marginStart="116dp"/>
    <TextView
            android:text="andanirizwan@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email" android:textSize="14sp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/nama"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="116dp"
            android:layout_marginStart="116dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>