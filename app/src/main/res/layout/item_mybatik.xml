<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        android:orientation="horizontal"
        android:padding="16dp">

    <ImageView
            android:layout_width="92dp"
            android:layout_height="91dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/item_gambar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:text="title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_title"
            android:textSize="14sp"
            android:layout_marginLeft="5dp" android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@+id/item_gambar" android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="205dp" android:layout_marginRight="205dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="description"
            android:layout_width="237dp"
            android:layout_height="78dp"
            android:id="@+id/item_description"
            android:textSize="10sp"
            android:layout_marginLeft="5dp" android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@+id/item_gambar" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/item_title"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>