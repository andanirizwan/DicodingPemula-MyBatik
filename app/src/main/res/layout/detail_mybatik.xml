<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailActivity">


    <ImageView
            android:layout_width="399dp"
            android:layout_height="181dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/detail_gambar" android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="38dp" android:layout_marginStart="38dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="51dp" android:layout_marginRight="51dp"
            app:layout_constraintHorizontal_bias="0.415" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_title" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_gambar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="38dp" android:layout_marginStart="38dp" android:textSize="18sp"/>
    <TextView
            android:text="description"
            android:layout_width="355dp"
            android:layout_height="67dp"
            android:id="@+id/detail_description" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="38dp" android:layout_marginStart="38dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="18dp" android:layout_marginRight="18dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>